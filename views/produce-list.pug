doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title farmerone List
  link(rel='stylesheet' href='/bootstrap-5.2.0-dist/css/bootstrap.css')
  link(rel='stylesheet' href='main.css')
// nav bar
nav.navbar.navbar-expand-lg
  .container-fluid
    a.navbar-brand(href='index.html#')
      img(src='/images/onlinelogomaker-091022-1346-6665.png' alt='')
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link.active(aria-current='page' href='/index.html' style='color: #fff;') Home
        li.nav-item
          a.nav-link.active(aria-current='page' href='about-us.html' style='color: #fff;') About us
        li.nav-item.dropdown
          a.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
            | Categories
          ul.dropdown-menu
            li
              a.dropdown-item(href='/horticulture.html') Horticuture
            li
              a.dropdown-item(href='/poultry.html') Poultry
            li
              a.dropdown-item(href='/dairy.html') Dairy

table.table.table-bordered
  thead.table-dark
    tr
      th(scope='col') product name
      th(scope='col') category
      th(scope='col') product price
      th(scope='col') product weight
      th(scope='col') mode of payment
      th(scope='col') product image
      th(scope='col') Update
      th(scope='col') Delete
  tbody
      if products.length 
          each product in products
              tr
                td #{product.productname}
                td #{product.category}
                td #{product.productprice}
                td #{product.productweight}
                td #{product.modeofpayment}
                td 
                    img(src="/"+product.uploadimage, alt="image" width ='150px' height='150px')  
                td
                    a
                        button.btn.btn-primary.btn-block(href='/produce/update/'+product._id) Update
                td
                    form(method="post" action='/produce/delete')
                        input(type="hidden", placeholder="", name="id", value=product._id)
                        button.btn.btn-danger.btn-block(type="submit") Delete
script(src='/public/bootstrap-5.2.0-dist/js/bootstrap.bundle.js')
