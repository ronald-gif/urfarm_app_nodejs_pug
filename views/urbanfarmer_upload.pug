// farmerOne registration
.myform1
  h3 Urban farmer Upload
  form#myFormToRegister(action='/upload' Method="POST" enctype="multipart/form-data")
    .container.thisForm
      .row.mb-4
        .col
          #error1.form-outline
            label.form-label(for='form3Example1') Product Name:
            input#productname.productname(type='text' name='productname')
            small.error
        .col
          #error10.form-outline
            label.form-label(for='form3Example1') Product category:
            select#category.category(name='category')
              option(value='' id='') Select category
              option#horticulture(value='horticulture') Horticuture
              option#dairy(value='dairy') Dairy
              option#poultry(value='poultry') Poultry
        .col
          #error3.form-outline
            label.form-label(for='form3Example1') Product Price:
            input#productprice.productprice(type='text' placeholder='Ugx' name='productprice')
            small.error
      .row.mb-4
        .col
          #error5.form-outline
            label.form-label(for='currentDate')  Product weight:
            input#productweight.productweight(type='text' name='productweight')
        .col
          #error6.form-outline
            label.form-label(for='farmerid') Farmer ID:
            select#farmerid(type='text' name='farmerid')
              if urbanFarmers.length 
                  each urbanFarmer in urbanFarmers
                    option(value = urbanFarmer._id) #{urbanFarmer.uniquenumber}
            small.error
        .col
          #error7.form-outline
            label.form-label(for='form3Example1') Location:
            input#location.location(type='text' name='location')
            small.error
      .row.mb-4
        .col
          #error8.form-outline
            label.form-label(for='exampleInputPassword1') select image of the product:
            input#uploadimage.uploadimage(type='file' name='uploadimage')
            small.error
        .col-4
          #error7.form-outline
            label.form-label(for='form3Example1') Date of Upload:
            input#dateofupload.dateofupload(type='date' name='dateofupload')
            small.error
      .row.mb-4
        .col
          #error14.form-outline
            label.form-label(for='form3Example1') Full Name:
            input#fullname.fullname(type="text" name="fullname")
            small.error
        .col
          #error15.form-outline.form-o
            label(for='gender') Gender:
            select#gender.gender(name='gender')
              option(value='male') Select gender
              option(value='male') Male
              option(value='female') Female
        .col-4
          #error16.form-outline.form-o
            label(for='ward') Ward:
            select#my_ward.values-for-wards(name='ward')
               if urbanFarmers.length 
                  each urbanFarmer in urbanFarmers
                    option(value = urbanFarmer._id) #{urbanFarmer.ward}
            small.error
      .row.mb-4
        .col
          #error15.form-outline.form-o
            label Mode of payment:
            select#Modeofpayment.Modeofpayment(name='modeofpayment')
              option(value='') Select mode of payment
              option(value='mobile') Mobile Money
              option(value='cash') Cash on Delivery
        .col
          #error15.form-outline.form-o
            label(for='DeliveryMethod') Delivery Method:
            select#gender.DeliveryMethod(name='deliveryMethod')
              option(value='pickup') Pick Up
              option(value='delivery') Home Delivery
        .col
          #error15.form-outline.form-o
            label Produce Type:
            select#producetype.producetype(name='producetype')
              option(value='organic') Organic
              option(value='nonorganic') Non Organic
      .row.mb-4
        .col
          .fo-signup
            button.btn-1(type='submit') Upload
        .col
        .col-2
          .fo-signup
            button.btn-1(type='submit') Delete
script(src='/bootstrap-5.2.0-dist/js/bootstrap.bundle.js')
