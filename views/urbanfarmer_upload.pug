            li
              a.dropdown-item(href='/dairy') Dairy
      form(action="/logout" method="POST") 
            button.btn-1(type='submit') logout        
// farmerOne registration
.myform1
  h3 Urban farmer Upload
  form#myFormToRegister(action='/upload' Method="POST" enctype="multipart/form-data")
    .container.thisForm
      .row.mb-4
        .col
          #error1.form-outline
            label.form-label(for='form3Example1') Product Name:
            input#productname.productname(type='text' name='productname')
            small.error
        .col
          #error10.form-outline
            label.form-label(for='form3Example1') Product category:
            select#category.category(name='category')
              option(value='' id='') Select category
              option#horticulture(value='horticulture') Horticuture
              option#dairy(value='dairy') Dairy
              option#poultry(value='poultry') Poultry
        .col
          #error3.form-outline
            label.form-label(for='form3Example1') Unit Price(ugx):
            input#productprice.productprice(type='text' placeholder='Ugx' name='unitprice')
            small.error
      .row.mb-4
        .col-4
          #error7.form-outline
            label.form-label(for='qauntity') Qauntity:
            input#location.location(type='text' name='qauntity')
            small.error
        .col-4
          #error6.form-outline
            label.form-label(for='totalamount') Total Amount:
            input#totalamount(type='text' name='totalamount')
            small.error
        .col-4
          #error7.form-outline
            label.form-label(for='date') Direction:
            input#direction.direction(type='text' name='direction')
            small.error
      .row.mb-4
        .col-4
          #error7.form-outline
            label.form-label(for='produceowner') Produce Owner:
            select#produceowner.produceowner(type='text' name='produceowner')
              if currentuser
                option(value= currentuser.firstname) #{currentuser.firstname +" " + currentuser.secondname}
            
        .col-4
          #error6.form-outline
            label.form-label(for='farmerid') Farmer ID:
            select#farmerid(type='text' name='farmerid')
              if currentuser 
                option(value= currentuser.uniquenumber type="text") #{currentuser.uniquenumber} 
        .col-4
          #error7.form-outline
            label.form-label(for='date') Date:
            input#dateofupload.dateofupload(type='date' name='dateofupload')
            small.error
      .row.mb-4
        .col
          #error8.form-outline
            label.form-label(for='uploadimage') select image of the product:
            input#uploadimage.uploadimage(type='file' name='uploadimage')
            small.error
        .col
        .col-4
          #error16.form-outline.form-o
            label(for='farmerward') Ward:
            select#my_ward.values-for-wards(name='farmerward')
              if currentuser 
                option(value = currentuser.ward) #{currentuser.ward}  
      .row.mb-4
        .col
          #error15.form-outline.form-o
            label Mode of payment:
            select#Modeofpayment.Modeofpayment(name='modeofpayment')
              option(value='') Select mode of payment
              option(value='mobile') Mobile Money
              option(value='cash') Cash on Delivery
        .col
          #error15.form-outline.form-o
            label(for='DeliveryMethod') Delivery Method:
            select#gender.DeliveryMethod(name='deliveryMethod')
              option(value='pickup') Pick Up
              option(value='delivery') Home Delivery
        .col
          #error15.form-outline.form-o
            label Produce Type:
            select#producetype.producetype(name='producetype')
              option(value='organic') Organic
              option(value='nonorganic') Non Organic
      .row.mb-4
        .col
          .fo-signup
            button.btn-1(type='submit') Upload

script(src='/bootstrap-5.2.0-dist/js/bootstrap.bundle.js')
