doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title UFarm
  link(rel='icon' type='image/x-icon' href='/images/favicon.ico')
  link(rel='stylesheet' href='/bootstrap-5.2.0-dist/css/bootstrap.css')
  link(rel='stylesheet' href='/main.css')
// nav bar
nav.navbar.navbar-expand-lg
  .container-fluid
    a.navbar-brand(href='index.html#')
      img(src='/images/onlinelogomaker-091022-1346-6665.png' alt='')
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link.active(aria-current='page' href='/home' style='color: #fff;') Home
        li.nav-item
          a.nav-link.active(aria-current='page' href='/about-us' style='color: #fff;') About us
        li.nav-item.dropdown
          a.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
            | Categories
          ul.dropdown-menu
            li
              a.dropdown-item(href='/horticulture.html') Horticuture
            li
              a.dropdown-item(href='/poultry.html') Poultry
            li
              a.dropdown-item(href='/dairy.html') Dairy
      // modal login
      .buttonlogin
       a(href='/login')
          button.btn(type='button') Login
      // Button trigger modal
      button.btn(type='button' data-bs-toggle='modal' data-bs-target='#Backdrop')
        | Sign up
      // Modal
      #Backdrop.modal.fade(data-bs-backdrop='static' data-bs-keyboard='false' tabindex='-1' aria-labelledby='staticBackdropLabel' aria-hidden='true')
        .modal-dialog
          .modal-content
            .modal-header
              h3(style='color: #000;') Register as:
              button.btn-close.mb-4.pb-4.btn-close-black(type='button' data-bs-dismiss='modal' aria-label='Close')
            .modal-body(style='color: #000;')
              .container
                .row
                  .col-2
                  .col
                    .navLinks
                      ul
                        li
                          a(href='/AO') Agriculture Officer
                        li
                          a(href='/farmerone') FarmerOne
                        li
                          a(href='/urbanFarmer') Urban farmer
                        li
                          a(href='/public') Normal user
// farmerOne registration
.myform1
  h3 Agriculture officer registration
  form#FormToRegister(action='/AO' name='registration' method='POST')
    .container.thisForm.ao-form
      .row.mb-4
        .col-md-6.col-lg-4
          #error1.form-outline
            label.form-label First name:
            input#firstname.firstname(type='text' name='firstname')
            small.error
        .col-md-6.col-lg-4
          #error2.form-outline
            label.form-label(for='form3Example1') Second name:
            input#secondname.secondname(type='text' name='secondname')
            small.error
        .col-md-6.col-lg-4
          #error3.form-outline
            label.form-label(for='form3Example1') Phone number:
            input#telephone.telephone(type='text' name='telephone')
            small.error
        
      .row.mb-4
        
        .col-md-6.col-lg-4
          #error4.form-outline
            label.form-label(for='form3Example1') Unique Number/ID:
            input#uniquenumber.uniquenumber(type='text' name='uniquenumber')
            small.error
        .col-md-6.col-lg-4
          #error5.form-outline
            label.form-label Password:
            input#password.password(type='password' name='password')
            small.error
        .col-md-6.col-lg-4
          #error6.form-outline
            label.form-label(for='form3Example1') Confirm Password:
            input#confirmpassword.confirmpassword(type='password' name='confirmpassword')
            small.error
      .row.mb-4
        .col-md-6.col-lg-4
           #error7.form-outline.form-o
              label(for='role') Role:
              select#role.values-for-wards(name='role')
                option(value='') Select role
                option(value='Agriculture officer') Agriculture Officer
              small.error
        .col-md-6.col-lg-4
          #error8.form-outline
            label.form-label(for='currentDate')  Current date:
            input#currentdate.currentdate(type='date' name='currentdate')
        .col-md-6.col-lg-4
          #error9.form-outline
            label.form-label Email:
            input#email.email(type='text' name='email')
            small.error
      .row.mb-4
        .col
          .mb-3.form-check
            input#exampleCheck1.form-check-input(type='checkbox')
            label.form-check-label(for='exampleCheck1') Comfirm
          .fo-signup
            button.btn-1(type='submit') Submit
script(src='/bootstrap-5.2.0-dist/js/bootstrap.bundle.js')
script(src='/AO.js')
