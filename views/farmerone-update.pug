              .row.mb-4
                //- .col-md-6.col-lg-3.col-xl-3
                //-   #error6.form-outline
                //-     label.form-label(for='exampleInputEmail1') Date of birth:
                //-     input#DOB.DOB(type='date' name='dateofbirth' style='padding-right: 5px;')
                //-     small.error
                .col-md-6.col-lg-3.col-xl-3
                  #error7.form-outline
                    label.form-label(for='form3Example1') Unique number/ID:
                    input#uniquenumber.uniqueNumber(type='text' name='uniquenumber' value = farmerone.uniquenumber)
                    small.error
                .col-md-6.col-lg-3.col-xl-3
                  #error10.form-outline
                    label.form-label Activities:
                    select#residence(name='activities')
                      option(value='') 
                      option#permanent(value='horticulture' selected = farmerone.activities == "horticulture") Horticulture
                      option#temporary(value='dairy' selected = farmerone.activities == "dairy") Dairy
                      option#temporary(value='poultry' selected = farmerone.activities == "poultry") Poultry
                    small.error
                .col-md-6.col-lg-3.col-xl-3
                  #error9.form-outline
                    label.form-label Location:
                    input#farmerlocation.farmerlocation(type='text' name='farmerlocation' value = farmerone.farmerlocation)
                    small.error
              .row.mb-4
                .col-md-6.col-lg-3.col-xl-3
                  #error10.form-outline
                    label.form-label Residence type:
                    select#residence(name='residence')
                      option(value='') select residence type
                      option#permanent(value='permanent' selected = farmerone.residence == "permanent") Permanent
                      option#temporary(value='temporary' selected = farmerone.residence == temporary) Temporary
                    small.error
               
                .col-md-6.col-lg-3.col-xl-3
                  #error14.form-outline
                    label.form-label(for='form3Example1') Years spent in masajja :
                    input#yearsspent.yearsspent(type='text' name='yearsspent' value = farmerone.yearsspent)
                    small.error
                .col-md-6.col-lg-3.col-xl-3
                  #error13.form-outline
                    label.form-label(for='form3Example1') Direction to your home:
                    input#directiontohome.directiontohome(type='text' name='direction' value = farmerone.direction)
                    small.error        
              .row.mb-4
                .col-md-6.col-lg-3.col-xl-3
                  #error15.form-outline.form-o
                    label(for='gender') Gender:
                    select#gender(name='gender')
                      //- option(value='') Select gender
                      option(value='male' name='gender' selected = farmerone.gender == "male") Male
                      option(value='female' name='gender' selected = farmerone.gender == "female") Female
                    small.error
                .col-md-6.col-lg-3.col-xl-3
                  #error16.form-outline.form-o
