        .myform1
          h3 update farmerOne 
          form#myFormToRegister(action='/farmerone/update/?id='+farmerone._id name='registration' method='POST')
            .container.thisForm
              .row.mb-4
                .col-md-6.col-lg-3.col-xl-3
                  #error1.form-outline
                    label.form-label(for='form3Example1') First name:
                    input#firstName.firstName(type='text' name='firstname' value = farmerone.firstname)
                    small.error
                .col-md-6.col-lg-3.col-xl-3
                  #error2.form-outline
                    label.form-label(for='form3Example1') Second name:
                    input#secondname.secondName(type='text' name='secondname' value = farmerone.secondname)
                    small.error
                .col-md-6.col-lg-3.col-xl-3
                  #error3.form-outline
                    label.form-label(for='form3Example1') Phone number:
                    input#telephone.telephone(type='text' name='telephone' value = farmerone.telephone)
                    small.error
                //- .col-md-6.col-lg-3.col-xl-3
                //-   #error5.form-outline
                //-     label.form-label(for='currentDate')  Current date:
