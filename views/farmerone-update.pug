                    select#myward(name='ward')
                      //- option(value='') Select Ward
                      option(value='ward1' name='ward1' selected = farmerone.ward == "ward1") LC1
                      option(value='ward2' name='ward2' selected = farmerone.ward == "ward2") LC2
                      option(value='ward3' name='ward3' selected = farmerone.ward == "ward3") LC3
                      option(value='ward4' name='ward4' selected = farmerone.ward == "ward4") LC4
                    small.error
                .col-md-6.col-lg-6.col-xl-3
                  #error19.form-outline
                      label.form-label Email:
                      input#email.email(type='text' name='email' value = farmerone.email)
                      small.error
