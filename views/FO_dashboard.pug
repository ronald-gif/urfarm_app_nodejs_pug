        //
          <div class="col-md-3">
          <div class="p-3 bg-white shadow-sm d-flex justify-content-around align-items-center rounded">
          <div>
          <h3 class="fs-2">%25</h3>
          <p class="fs-5">Increase</p>
          </div>
          <i class="fas fa-chart-line fs-1 primary-text border rounded-full secondary-bg p-3"></i>
          </div>
          </div>
      .row.my-5
        h3.fs-4.mb-3 Pending Products
        .col
          table.table.bg-white.rounded.shadow-sm.table-hover
            thead
              tr
                th(scope='col') product name
                th(scope='col') category
                th(scope='col') Unit price
                th(scope='col') Qauntity
                th(scope='col') Total Amount
                th(scope='col') product Status
                th(scope='col') product image
                th(scope='col') Approve 
            tbody
                if products.length 
                  each product in products
                    if product.status == "Pending" && product.farmerward === produceowner.ward
                      tr
                        td #{product.productname}
                        td #{product.category}
                        td #{product.unitprice}
                        td #{product.qauntity}
                        td #{product.totalamount}
                        td #{product.status}
                        td 
                            img(src="/"+product.uploadimage, alt="image" width ='150px' height='150px')  
                        td
                            a.btn.btn-primary.btn-block(href='/produce/approved/'+product._id) Approved
