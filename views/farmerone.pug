      button.btn(type='button' data-bs-toggle='modal' data-bs-target='#Backdrop')
        | Sign up
      // Modal
      #Backdrop.modal.fade(data-bs-backdrop='static' data-bs-keyboard='false' tabindex='-1' aria-labelledby='staticBackdropLabel' aria-hidden='true')
        .modal-dialog
          .modal-content
            .modal-header
              h3(style='color: #000;') Register as:
              button.btn-close.mb-4.pb-4.btn-close-black(type='button' data-bs-dismiss='modal' aria-label='Close')
            .modal-body(style='color: #000;')
              .container
                .row
                  .col-2
                  .col
                    .navLinks
                      ul
                        li
                          a(href='/AO') Agriculture Officer
                        li
                          a(href='/farmerone') FarmerOne
                        li
                          a(href='/urbanFarmer') Urban farmer
                        li
                          a(href='/public') Normal user
                      
// farmerOne registration
.myform1
  h3 farmerOne registration
  form#myFormToRegister(action='/farmerone' name='registration' method='POST')
    .container.thisForm
      .row.mb-4
        .col-md-6.col-lg-3.col-xl-3
          #error1.form-outline
            label.form-label(for='form3Example1') First name:
            input#firstName.firstName(type='text' name='firstname')
            small.error
        .col-md-6.col-lg-3.col-xl-3
          #error2.form-outline
            label.form-label(for='form3Example1') Second name:
            input#secondname.secondName(type='text' name='secondname')
            small.error
        .col-md-6.col-lg-3.col-xl-3
          #error3.form-outline
            label.form-label(for='form3Example1') Phone number:
            input#telephone.telephone(type='text' name='telephone')
            small.error
        .col-md-6.col-lg-3.col-xl-3
          #error5.form-outline
            label.form-label(for='currentDate')  Current date:
            input#currentdate.currentDate(type='date' name='currentdate')
      .row.mb-4
        .col-md-6.col-lg-3.col-xl-3
          #error6.form-outline
            label.form-label(for='exampleInputEmail1') Date of birth:
            input#DOB.DOB(type='date' name='dateofbirth' style='padding-right: 5px;')
            small.error
        .col-md-6.col-lg-3.col-xl-3
          #error7.form-outline
            label.form-label(for='form3Example1') Unique number/ID:
            input#uniquenumber.uniqueNumber(type='text' name='uniquenumber' placeholder='UF-FO/1234')
            small.error
        .col-md-6.col-lg-3.col-xl-3
          #error8.form-outline
            label.form-label NIN Number:
            input#nin.nin(type='text' name='nin' placeholder='CM12345678ABCD')
            small.error
        .col-md-6.col-lg-3.col-xl-3
          #error9.form-outline
            label.form-label Location:
            input#farmerlocation.farmerlocation(type='text' name='farmerlocation')
            small.error
      .row.mb-4
        .col-md-6.col-lg-3.col-xl-3
          #error10.form-outline
            label.form-label Residence type:
            select#residence(name='residence')
              option(value='') select residence type
              option#permanent(value='permanent') Permanent
              option#temporary(value='temporary') Temporary
            small.error
        .col-md-6.col-lg-3.col-xl-3
          #error11.form-outline
            label.form-label Password:
            input#password.password(type='password' name='password')
            small.error
        .col-md-6.col-lg-3.col-xl-3
          #error12.form-outline
            label.form-label(for='form3Example1') Confirm Password:
            input#confirmpassword.confirmpassword(type='password' name='confirmpassword')
            small.error
        .col-md-6.col-lg-3.col-xl-3
          #error13.form-outline
            label.form-label(for='form3Example1') Direction to your home:
            input#directiontohome.directiontohome(type='text' name='direction')
            small.error        
      .row.mb-4
        .col-md-6.col-lg-3.col-xl-3
          #error14.form-outline
            label.form-label(for='form3Example1') Years spent in masajja :
            input#yearsspent.yearsspent(type='text' name='yearsspent')
            small.error
        .col-md-6.col-lg-3.col-xl-3
          #error15.form-outline.form-o
            label(for='gender') Gender:
            select#gender(name='gender')
              option(value='') Select gender
              option(value='male' name='gender') Male
              option(value='female' name='gender') Female
            small.error
        .col-md-6.col-lg-3.col-xl-3
           #error16.form-outline.form-o
            label(for='ward') Ward:
            select#myward(name='ward')
              option(value='') Select Ward
              option(value='ward1' name='ward1') LC1
              option(value='ward2' name='ward2') LC2
              option(value='ward3' name='ward3') LC3
              option(value='ward4' name='ward4') LC4
            small.error
        .col-md-6.col-lg-3.col-xl-3
          #error18.form-outline.form-o
              label(for='role') Role:
              select#role.values-for-wards(name='role')
                option(value='') Select role
                option(value='farmerone') Farmerone
              small.error
      .row.mb-4
        .col-md-6.col-lg-3.col-xl-3
          #error17.form-outline.radio
            label(for='lang') Activities:
            .radio
              input#horticulture(type='checkbox' name='activities' value='horticulture')
              span Horticulture
              input#dairy(type='checkbox' name='activities' value='dairy')
              span Dairy 
              input#poultry(type='checkbox' name='activites' value='poultry')
              span Poultry
              br
            small.error
        .col-md-6.col-lg-6.col-xl-3
        .col-md-6.col-lg-6.col-xl-3
          #error19.form-outline
              label.form-label Email:
              input#email.email(type='text' name='email')
              small.error
      .row.mb-4
        .col
          .mb-3.form-check
            input#exampleCheck1.form-check-input(type='checkbox')
            label.form-check-label(for='exampleCheck1') Comfirm
          .fo-signup
            button.btn-1(type='submit') Submit
  //- form(action="/logout" method="POST") 
  //-           button.btn-1(type='submit') logout
