doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Sales page
  link(type='image/x-icon' rel='icon' href='/images/favicon.ico')
  link(rel='stylesheet' href='/bootstrap-5.2.0-dist/css/bootstrap.css')
  link(rel='stylesheet' href='/main.css')
  style.
    body {
    background-color: #001;
    }
    .container-content{
        display: flex;
        flex-direction: row;
        padding: 15px 100px 0px;
        align-items:center;
        gap: 5rem;
         
    }
    .content-info h5{
        text-align: left;
        color: #fff;
        padding-bottom: 7px;
    }
    span {
        color: #12bbeb;
    }
 
 
// nav bar
nav.navbar.navbar-expand-lg
  .container-fluid
    a.navbar-brand(href='index.html#')
      img(src='/images/onlinelogomaker-091022-1346-6665.png' alt='')
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link.active(aria-current='page' href='/home' style='color: #fff;') Home
        li.nav-item
          a.nav-link.active(aria-current='page' href='/about-us' style='color: #fff;') About us
        li.nav-item.dropdown
          a.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
            | Categories
          ul.dropdown-menu
            li
              a.dropdown-item(href='/horticulture') Horticuture
            li
              a.dropdown-item(href='/poultry') Poultry
            li
              a.dropdown-item(href='/dairy') Dairy
            
      // modal login
      if !currentuser
        .buttonlogin
          a(href='/login')
            button.btn(type='button') Login
        // Button trigger modal
        button.btn(type='button' data-bs-toggle='modal' data-bs-target='#Backdrop')
          | Sign up
        // Modal
        #Backdrop.modal.fade(data-bs-backdrop='static' data-bs-keyboard='false' tabindex='-1' aria-labelledby='staticBackdropLabel' aria-hidden='true')
          .modal-dialog
            .modal-content
              .modal-header
                h3(style='color: #000;') Register as:
                button.btn-close.mb-4.pb-4.btn-close-black(type='button' data-bs-dismiss='modal' aria-label='Close')
              .modal-body(style='color: #000;')
                .container
                  .row
                    .col-2
                    .col
                      .navLinks
                        ul
                          li
                            a(href='/AO') Agriculture Officer
                          li
                            a(href='/farmerone') FarmerOne
                          li
                            a(href='/urbanFarmer') Urban farmer
                          li
                            a(href='/public') Normal user
                 
      if currentuser
        form(action="/logout" method="POST") 
              button.btn(type='submit') Logout
    

          

if availableproducts.length > 0
    each availableproduct in availableproducts
        if availableproduct.status == "Approved" 
        .container-content
            .content-img 
                img(src='/'+availableproduct.uploadimage, alt="" width ='500px' height='400px')
            .content-info
                h5 Poduct Name:   
                        span #{availableproduct.productname}
                h5 product price: 
                         span #{new Intl.NumberFormat().format(availableproduct.totalamount)} UGX 
                h5 product owner:   
                            span #{availableproduct.produceowner} 
                h5 mode of payment:     
                             span #{availableproduct.modeofpayment}
                h5 Delivery method:     
                            span #{availableproduct.deliveryMethod}
                h5 Product Availability:         
                            span #{availableproduct.availability}     
                h5 Email supplier:     
                            span #{availableproduct.email}
                h5 Call supplier:     
                            span #{availableproduct.telephone}
                h5 Product description:     
                            span #{availableproduct.description}
footer.footer(id='#foot_last')
  .container-last
    .logo
      a.navbar-brand(href='/home')
        img(src='/images/onlinelogomaker-091022-1346-6665.png' alt='/home')
    .payment-method
      h5 Payment methods
      ul
        li
          a(href='/payment')
            img(src='/images/Payment_-_Airtel-02.png' alt='')
        li
          a(href='/payment')
            img(src='/images/mtn.png' alt='')
        li
          a(href='/payment')
            img(src='/images/money.jpg' alt='')
    .follow-us
      h5 Stay with us on
      ul
        li
          a(href='https://www.facebook.com/profile.php?id=100086467246132')
            img(src='/images/facebook.svg' alt='facebook')
        li
          a(href='https://twitter.com/UfarmMasajja')
            img(src='/images/twitter.svg' alt='twitter')
        li
          a(href='https://www.instagram.com/ufarm_masajja/')
            img(src='/images/square-instagram.svg' alt='square-instagram')
