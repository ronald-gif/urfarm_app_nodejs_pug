doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
  link(rel='stylesheet' href='/dashboard.css')
  title urban farmer
  link(rel='x-icon' type='image/x-icon' href='/img/images/favicon.ico')
  link(rel="stylesheet", href="/urbafarmer.css")
#wrapper.d-flex
  // Sidebar
  #sidebar-wrapper
    .sidebar-heading.text-center.py-4.primary-text.fs-4.fw-bold.text-uppercase.border-bottom
      img(src='/images/onlinelogomaker-091022-1346-6665.png' alt='')
    .list-group.list-group-flush.my-3
      a.list-group-item.list-group-item-action.bg-transparent.second-text.active(href='/urban-dashboard')
        i.fas.fa-tachometer-alt.me-2
        | Dashboard
      
      a.list-group-item.list-group-item-action.bg-transparent.second-text.fw-bold(href='/upload')
        i.fas.fa-chart-line.me-2
        | Upload Products
      
      a.list-group-item.list-group-item-action.bg-transparent.second-text.fw-bold(href='/producelist')
        i.fas.fa-shopping-cart.me-2
        | Pending Products
      a.list-group-item.list-group-item-action.bg-transparent.second-text.fw-bold(href='/approvedproducts')
        i.fas.fa-gift.me-2
        | Approved Products
  #page-content-wrapper
    nav.navbar.navbar-expand-lg.navbar-light.bg-transparent.py-4.px-4
      .d-flex.align-items-center
        i#menu-toggle.fas.fa-align-left.primary-text.fs-4.me-3
        h2.fs-2.m-0 Dashboard
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.ms-auto.mb-2.mb-lg-0
          li.nav-item.dropdown
            a#navbarDropdown.nav-link.dropdown-toggle.second-text.fw-bold(href='/urbanfarmerlist' role='button' data-bs-toggle='dropdown' aria-expanded='false')
              i.fas.fa-user.me-2  
            ul.dropdown-menu(aria-labelledby='navbarDropdown')
              form(action="/logout" method="POST") 
                 button.btn(type='submit') logout
    .container-fluid.px-4
      .row.g-3.my-2
        .col-md-3
          .p-3.bg-white.shadow-sm.d-flex.justify-content-around.align-items-center.rounded
            div
              a(href='/upload') Upload Product
        .col-md-3
          .p-3.bg-white.shadow-sm.d-flex.justify-content-around.align-items-center.rounded
            div
              a(href='/producelist') Pending products
        .col-md-3
          .p-3.bg-white.shadow-sm.d-flex.justify-content-around.align-items-center.rounded
            div
              a(href='/approvedlist') Approved products
    
    .myform1
      h3 Update product details
      form#myFormToRegister(action='/produce/update/?id='+product._id Method="POST")
        .container.thisForm
          .row.mb-4
            .col
              #error1.form-outline
                label.form-label(for='form3Example1') Product Name:
                input#productname.productname(type='text' name='productname' value=product.productname)
                small.error
            .col
              #error10.form-outline
                label.form-label(for='form3Example1') Product category:
                select#category.category(name='category')
                  option#horticulture(value='horticulture') Horticuture
                  option#dairy(value='dairy' selected = product.category == "dairy") Dairy
                  option#poultry(value='poultry' selected = product.category == "poultry") Poultry
            .col
              #error3.form-outline
                label.form-label(for='form3Example1') Unit Price(ugx):
                input#productprice.productprice(type='text' placeholder='Ugx' name='unitprice' value = product.unitprice)
                small.error
          .row.mb-4
            .col-4
              #error7.form-outline
                label.form-label(for='qauntity') Qauntity:
                input#location.location(type='text' name='qauntity' value=product.qauntity)
                small.error
            .col-4
              #error6.form-outline
                label.form-label(for='totalamount') Total Amount:
                input#totalamount(type='text' name='totalamount' value=product.totalamount)
                small.error
            .col-4
              #error7.form-outline
                label.form-label(for='date') Direction:
                input#direction.direction(type='text' name='direction' value = product.direction)
                small.error  
          .row.mb-4
            .col
              #error15.form-outline.form-o
                label Mode of payment:
                select#Modeofpayment.Modeofpayment(name='modeofpayment')
                  option(value='mobile' selected = product.modeofpayment === "mobile") Mobile Money
                  option(value='cash' selected = product.modeofpayment === "cash") Cash on Delivery
            .col
               #error15.form-outline.form-o
                label Delivery Method:
                select#Modeofpayment.Modeofpayment(name='deliveryMethod')
                  option(value='pick up' selected = product.deliveryMethod === "pick up") pick up
                  option(value='delivery' selected = product.deliveryMethod === "delivery") Home Delivery
            .col
              #error15.form-outline.form-o
                label Produce Type:
                select#producetype.producetype(name='producetype')
                  option(value='organic' selected = product.producetype === "organic") Organic
                  option(value='nonorganic' selected = product.producetype === "nonorganic") Non Organic
          .row.mb-4
            .col
              .fo-signup
                button.btn-1(type='submit') Update

script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js')
